<UserControl x:Class="TransportCompanyIS.Views.DriversPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <WrapPanel Margin="0,0,0,12">
            <TextBox Width="250" Height="32" Margin="0,0,8,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox Width="180" Height="32" Margin="0,0,8,0" ItemsSource="{Binding StatusFilters}" SelectedItem="{Binding SelectedStatus}" />
            <Button Content="Фильтровать" Width="120" Height="32" Margin="0,0,8,0" Command="{Binding SearchCommand}" />
            <Button Content="Сброс" Width="100" Height="32" Command="{Binding RefreshCommand}" />
        </WrapPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Drivers}" SelectedItem="{Binding SelectedDriver}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="100" />
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="140" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120" />
                <DataGridTextColumn Header="Машина" Binding="{Binding VehicleDisplay}" Width="180" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Добавить" Width="110" Command="{Binding AddCommand}" />
            <Button Content="Редактировать" Width="130" Command="{Binding EditCommand}" />
            <Button Content="Удалить" Width="110" Command="{Binding DeleteCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
