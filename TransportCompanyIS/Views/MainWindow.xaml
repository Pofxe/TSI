<Window x:Class="TransportCompanyIS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TransportCompanyIS.Views"
        Title="Транспортная компания" Height="720" Width="1024" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFF9F9F9">
        <TabControl Margin="16">
            <TabItem Header="Машины" Visibility="{Binding CanViewVehicles, Converter={StaticResource BooleanToVisibilityConverter}}">
                <views:VehiclesPage DataContext="{Binding VehiclesViewModel}" />
            </TabItem>
            <TabItem Header="Перевозки" Visibility="{Binding CanViewShipments, Converter={StaticResource BooleanToVisibilityConverter}}">
                <views:ShipmentsPage DataContext="{Binding ShipmentsViewModel}" />
            </TabItem>
            <TabItem Header="Рейсы">
                <views:TripsPage DataContext="{Binding TripsViewModel}" />
            </TabItem>
            <TabItem Header="Пользователи" Visibility="{Binding IsAdministrator, Converter={StaticResource BooleanToVisibilityConverter}}">
                <views:UsersPage DataContext="{Binding UsersViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
