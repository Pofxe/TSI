<Window x:Class="TransportCompanyIS.Views.OrderCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="470" Width="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="#EEF2FF" Padding="12" CornerRadius="8" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Новый заказ на перевозку" FontWeight="SemiBold" FontSize="16" />
                <TextBlock Text="Укажите маршрут, назначьте автомобиль и добавьте короткое описание заказа." Foreground="#4B5563" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Откуда" Grid.Row="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Shipment.FromAddress}" />

            <TextBlock Text="Куда" Grid.Row="1" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Shipment.ToAddress}" />

            <TextBlock Text="Автомобиль" Grid.Row="2" VerticalAlignment="Center" />
            <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Vehicles}" DisplayMemberPath="Model"
                      SelectedValuePath="Id" SelectedValue="{Binding Shipment.AssignedVehicleId}" />

            <TextBlock Text="Статус" Grid.Row="3" VerticalAlignment="Center" />
            <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Statuses}" SelectedItem="{Binding Shipment.Status}" />

            <TextBlock Text="Описание" Grid.Row="4" VerticalAlignment="Top" Margin="0,6,0,0" />
            <TextBox Grid.Row="4" Grid.Column="1" Height="120" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     Text="{Binding Shipment.Description}" />
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Оформить" Width="110" Click="OnSaveClick" />
            <Button Content="Отмена" Width="90" Click="OnCancelClick" />
        </StackPanel>
    </Grid>
</Window>
