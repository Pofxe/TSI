<Window x:Class="TransportCompanyIS.Views.DriverEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Водитель" Height="420" Width="470" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Driver.Login}" />

        <TextBlock Text="ФИО" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Driver.FullName}" />

        <TextBlock Text="Телефон" Grid.Row="2" VerticalAlignment="Center" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Driver.PhoneNumber}" />

        <TextBlock Text="Статус" Grid.Row="3" VerticalAlignment="Center" />
        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Statuses}" SelectedItem="{Binding Driver.DriverStatus}" />

        <TextBlock Text="Закрепленная машина" Grid.Row="4" VerticalAlignment="Center" />
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding Vehicles}" DisplayMemberPath="DisplayName"
                  SelectedValuePath="Id" SelectedValue="{Binding SelectedVehicleId}" />

        <TextBlock Text="Пароль" Grid.Row="5" VerticalAlignment="Center" />
        <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="PasswordBox" />

        <TextBlock Text="Подтверждение" Grid.Row="6" VerticalAlignment="Center" />
        <PasswordBox Grid.Row="6" Grid.Column="1" x:Name="ConfirmPasswordBox" />

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Width="100" Click="OnSaveClick" />
            <Button Content="Отмена" Width="90" Click="OnCancelClick" />
        </StackPanel>
    </Grid>
</Window>
