<Window x:Class="TransportCompanyIS.Views.StatusEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Статус рейса" Height="200" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Статус" />
        <ComboBox Grid.Row="1" Height="32" Margin="0,8,0,16" SelectedItem="{Binding StatusText}">
            <ComboBox.ItemsSource>
                <x:Array Type="{x:Type sys:String}">
                    <sys:String>Запланирован</sys:String>
                    <sys:String>В пути</sys:String>
                    <sys:String>Завершен</sys:String>
                </x:Array>
            </ComboBox.ItemsSource>
        </ComboBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="100" Click="OnSaveClick" />
            <Button Content="Отмена" Width="90" Click="OnCancelClick" />
        </StackPanel>
    </Grid>
</Window>
