<Window x:Class="TransportCompanyIS.Views.TripEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="Рейс" Height="360" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Перевозка" Grid.Row="0" VerticalAlignment="Center" />
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,8"
                  ItemsSource="{Binding Shipments}" DisplayMemberPath="FromAddress"
                  SelectedValuePath="Id" SelectedValue="{Binding Trip.ShipmentId}" />

        <TextBlock Text="Машина" Grid.Row="1" VerticalAlignment="Center" />
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="8,0,0,8"
                  ItemsSource="{Binding Vehicles}" DisplayMemberPath="Model"
                  SelectedValuePath="Id" SelectedValue="{Binding Trip.VehicleId}" />

        <TextBlock Text="Водитель" Grid.Row="2" VerticalAlignment="Center" />
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="8,0,0,8"
                  ItemsSource="{Binding Drivers}" DisplayMemberPath="FullName"
                  SelectedValuePath="Id" SelectedValue="{Binding Trip.DriverId}" />

        <TextBlock Text="Статус" Grid.Row="3" VerticalAlignment="Center" />
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="8,0,0,8" SelectedItem="{Binding Trip.Status}">
            <ComboBox.ItemsSource>
                <x:Array Type="{x:Type sys:String}">
                    <sys:String>Запланирован</sys:String>
                    <sys:String>В пути</sys:String>
                    <sys:String>Завершен</sys:String>
                </x:Array>
            </ComboBox.ItemsSource>
        </ComboBox>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Width="100" Click="OnSaveClick" />
            <Button Content="Отмена" Width="90" Click="OnCancelClick" />
        </StackPanel>
    </Grid>
</Window>
