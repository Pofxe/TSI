<Window x:Class="TransportCompanyIS.Views.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь" Height="340" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="1" Margin="8,0,0,8" Text="{Binding User.Login}" />

        <TextBlock Text="Роль" Grid.Row="1" VerticalAlignment="Center" />
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="8,0,0,8"
                  ItemsSource="{Binding Roles}" SelectedItem="{Binding User.Role}" />

        <TextBlock Text="Пароль" Grid.Row="2" VerticalAlignment="Center" />
        <PasswordBox Grid.Row="2" Grid.Column="1" Margin="8,0,0,8" x:Name="PasswordBox" />

        <TextBlock Text="Подтверждение" Grid.Row="3" VerticalAlignment="Center" />
        <PasswordBox Grid.Row="3" Grid.Column="1" Margin="8,0,0,8" x:Name="PasswordConfirmBox" />

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Width="100" Click="OnSaveClick" />
            <Button Content="Отмена" Width="90" Click="OnCancelClick" />
        </StackPanel>
    </Grid>
</Window>
