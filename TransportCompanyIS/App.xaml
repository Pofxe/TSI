<Application x:Class="TransportCompanyIS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <LinearGradientBrush x:Key="PrimaryButtonBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF3B82F6" Offset="0" />
            <GradientStop Color="#FF2563EB" Offset="1" />
        </LinearGradientBrush>

        <Style TargetType="Window">
            <Setter Property="Background" Value="#FFF4F7FF" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderBrush" Value="#FFCBD5E1" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="BorderBrush" Value="#FFCBD5E1" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="BorderBrush" Value="#FFCBD5E1" />
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#FFE2E8F0" />
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="#FFFFFFFF" />
            <Setter Property="AlternatingRowBackground" Value="#FFF8FAFF" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="BorderBrush" Value="#FFE2E8F0" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Application.Resources>
</Application>
